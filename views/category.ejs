<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Museum Inventory Application</title>
  </head>
  <body>
    <%- include('navbar') %> <% if (locals.categories) { %>
    <h1 class="centered-header">All categories</h1>
    <main class="museum-main">
      <% categories.forEach(category => { %>
      <section class="museum-section">
        <h2>
          <a href="/category/<%= category.category_id %>"
            ><%= category.category_name %></a
          >
        </h2>
      </section>
      <% }) %>
    </main>
    <% } %>
  </body>
</html>
