<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Museum Inventory Application</title>
  </head>
  <body>
    <%- include('navbar') %>
    <h1 class="centered-header">Museum Details</h1>
    <main class="museum-main">
      <% museum.forEach(museumObj => { %>
      <form
        action="/museum/<%= museumObj.id %>/delete"
        method="POST"
        style="display: inline"
      >
        <section class="museum-section">
          <div>
            <a href="/museum/<%= museumObj.id %>/delete">Delete Museum</a>
            <a href="/museum/<%= museumObj.id %>/update">Update Museum</a>
          </div>
          <h1><%= museumObj.name %></h1>
          <p><%= museumObj.history %></p>
          <div class="image-container">
            <img src="<%= museumObj.image_url %>" alt="Museum" />
          </div>
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this museum?')"
          >
            Delete
          </button>
        </section>
        <% }) %>
      </form>
    </main>
  </body>
</html>
