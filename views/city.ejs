<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Museum Inventory Application</title>
  </head>
  <body>
    <%- include('navbar') %> <% if (locals.cities) { %>
    <h1 class="centered-header">All cities</h1>
    <main class="museum-main">
      <% cities.forEach(city => { %>
      <section class="museum-section">
        <h2>
          <a href="/city/<%= city.city_id %>"><%= city.city_name %></a>
        </h2>
        <div class="image-container">
          <img src="<%= city.city_image_url %>" alt="City Image" />
        </div>
      </section>
      <% }) %>
    </main>
    <% } %>
  </body>
</html>
