<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Museum Inventory Application</title>
  </head>
  <body>
    <%- include('navbar') %> <% if (locals.museums) { %>
    <h1 class="centered-header">All museums</h1>

    <main class="museum-main">
      <% museums.forEach(museum => { %>
      <section class="museum-section">
        <h2><%= museum.name %></h2>
        <p><%= museum.history %></p>
        <div class="image-container">
          <img src="<%= museum.image_url %>" alt="Museum Image" />
        </div>
        <li>
          <a href="/museum/<%= museum.id %>">More details</a>
        </li>
      </section>
      <% }) %>
    </main>
    <% } %>
  </body>
</html>
