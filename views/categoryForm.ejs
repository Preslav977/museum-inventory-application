<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Museum Inventory Application</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('navbar') %>

    <h1 class="centered-header">Create category</h1>

    <% if (locals.categories) { %> <% categories.forEach(category => { %>
    <div class="form-container">
      <form action="/category/create" method="POST">
        <div class="form-content">
          <label for="category_name">Category Name</label>
          <input
            type="text"
            name="category_name"
            id="category_name"
            value="<%= category.category_name %>"
          />
        </div>
        <div class="form-btn">
          <button class="delete-btn" type="submit">Submit</button>
        </div>
        <div><%- include('./partials/error.ejs') %></div>
      </form>
    </div>

    <% }) %> <% } else { %>
    <div class="form-container">
      <form action="/category/create" method="POST">
        <div class="form-content">
          <label for="category_name">Category Name</label>
          <input type="text" name="category_name" id="category_name" />
        </div>
        <div class="form-btn">
          <button class="delete-btn" type="submit">Submit</button>
        </div>
        <div><%- include('./partials/error.ejs') %></div>
      </form>
    </div>
    <% } %>
  </body>
</html>
