<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Museum Inventory Application</title>
  </head>
  <body>
    <%- include('navbar') %> <% if (locals.city) { %>
    <h1 class="centered-header">City Details</h1>
    <main class="museum-main">
      <% city.forEach(cityObj => { %>

      <section class="museum-section">
        <li>
          <a href="/city/<%= cityObj.city_id %>/delete">Delete City</a>
          <a href="/city/<%= cityObj.city_id %>/update">Update City</a>
        </li>
        <form action="/city/<%= cityObj.city_id %>/delete" method="POST">
          <h2><%= cityObj.city_name %></h2>
          <div>
            <img src="<%= cityObj.city_image_url %>" alt="City" />
          </div>
          <button
            class="delete-btn"
            type="submit"
            onclick="return confirm('Are you sure you want to delete this city?')"
          >
            Delete
          </button>
        </form>
      </section>

      <% }) %>
    </main>
    <% } %>
  </body>
</html>
